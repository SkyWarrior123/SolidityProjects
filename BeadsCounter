pragma solidity ^0.8.8;

// Demonstrating a Beads Counter in solidity

contract BeadsCounter {
    uint public beads = 0 ; // By default, variable beads is initialized to 0


// Method to increment beads on every count
    function incbead() external {
        beads++;
    }

// Method to reset the count of Beads
    function reset() external {
        beads = 0;
    }
}
